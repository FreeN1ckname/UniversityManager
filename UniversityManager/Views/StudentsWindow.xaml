<Window x:Class="UniversityManager.Views.StudentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversityManager.Views"
        mc:Ignorable="d"
        Title="Студенты" Height="450" Width="800"
        Loaded="Window_Loaded"
        >

    <Window.Resources>
        <DataTemplate x:Key="listTemplate">
            <StackPanel Orientation="Horizontal">
                <Image Height="150" Width="150" Source="{Binding Photo}"/>
                <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                    <TextBlock>
                        <Bold>Имя: </Bold> 
                        <TextBlock Text="{Binding Name}"/>
                    </TextBlock>
                    <TextBlock>
                        <Bold>Фамилия: </Bold> 
                        <TextBlock Text="{Binding Surname}"/>
                    </TextBlock>
                    <TextBlock>
                        <Bold>Дата рождения: </Bold> 
                        <TextBlock Text="{Binding Birthday, StringFormat=dd.MM.yyyy}"/>
                        г.
                    </TextBlock>
                    <TextBlock>
                        <Bold>Пол: </Bold> 
                        <TextBlock Text="{Binding Gender}"/>
                    </TextBlock>
                    <TextBlock>
                        <Bold>Группa: </Bold> 
                        <TextBlock Text="{Binding Group.Name}"/>
                        <TextBlock TextDecorations="Underline" Text="{Binding Group.YearFormation}"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ListBox x:Name="listStudents" ItemTemplate="{StaticResource listTemplate}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" MouseDoubleClick="listStudents_MouseDoubleClick" Margin="0,0,0,54">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <Button x:Name="addStudent" Content="Добавить" HorizontalAlignment="Left" Margin="651,370,0,0" VerticalAlignment="Top" Width="110" Click="addStudent_Click" Height="28"/>
    </Grid>
</Window>